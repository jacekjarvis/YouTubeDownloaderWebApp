@model YouTubeVM

<div class="row justify-content-center text-center">
    <div class="col-lg-8 col-sm-auto">
        <h1 class="display-6">Jarvo's YouTube Downloader</h1>
        <h2 class="py-5">@Model.Title</h2>
        <div class="py-1">
            <form method="post" class="row">
                <input asp-for="Title" hidden />
                <input asp-for="URL" hidden />
                <input asp-for="MediaType" hidden />
                <input asp-for="Options" hidden />
                <input asp-for="FileName" hidden />

                <div class="row pt-2 justify-content-center">
                    <div class="col-4">
                        <button type="submit"  class="btn btn-primary form-control">Click here to Save your File</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="py-4">
            <p class="fs-5"><a asp-controller="Home" asp-action="Index">Download another video?</a></p>
        </div>
    </div>
</div>


